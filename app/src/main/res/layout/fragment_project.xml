<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundTint="@color/md_theme_light_background"
        android:theme="@style/Theme.MobileSoftware_FinalProject1">

        <Button
            android:id="@+id/button_instructions"
            android:layout_width="317dp"
            android:layout_height="142dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#95C99B"
            android:fontFamily="@font/lato_bold"
            android:text="@string/project_instructions"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/md_theme_light_onBackground"
            app:cornerRadius="@dimen/fab_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_proposal"
            android:layout_width="317dp"
            android:layout_height="142dp"
            android:layout_marginTop="72dp"
            android:backgroundTint="#95C99B"
            android:fontFamily="@font/lato_bold"
            android:text="@string/project_proposal"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/md_theme_light_onBackground"
            app:cornerRadius="@dimen/fab_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_instructions"
            app:layout_constraintVertical_bias="0.152"
            tools:ignore="TextSizeCheck" />

        <WebView
            android:layout_width="46dp"
            android:layout_height="23dp"
            android:layout_marginTop="211dp"
            android:background="@color/md_theme_light_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_proposal"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>